{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@changesets/cli": "2.22.0",
    "lerna": "^5.1.8"
  },
  "scripts": {
    "local": "lerna run local --stream --parallel",
    "build": "lerna run build --parallel",
    "changeset-create": "changeset",
    "changeset-apply": "changeset version",
    "release": "lerna build && changeset publish",
    "clean": "lerna clean",
    "clean:update": "lerna clean && lerna bootstrap",
    "build:client": "lerna run build --scope=@lucianopaci/nodeshop-client",
    "build:server": "lerna run build --scope=@lucianopaci/nodeshop-server",
    "heroku-postbuild": "if [ $CLIENT_ENV ]; then yarn run prod-client; elif [ $SERVER_ENV ]; then yarn run prod-server; else echo no environment detected, please set CLIENT_ENV or SERVER_ENV; fi",
    "prod-client": "yarn run build:client",
    "prod-server": "yarn run build:server"
  },
  "workspaces": [
    "packages/*"
  ]
}
